<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#4EBEF1"
                android:gravity="center"
                android:text="시간 선택"
                android:textColor="#FFFFFF"
                android:textColorHint="#101010"
                android:textSize="20sp"
                android:textStyle="normal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:shadowColor="#C31111"
                android:text="시작시간과 종료시간을 눌러주세요"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#101010"
                android:textSize="18sp"
                android:textStyle="normal" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#DFE0E1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="9"
                android:text="9:00~10:00"
                android:textColor="#000" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="10"
                android:text="10:00~11:00"
                android:textColor="#000000"
                android:textColorHighlight="#000000" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="11"
                android:text="11:00~12:00" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="12"
                android:text="12:00~13:00" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="13"
                android:text="13:00~14:00" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="14"
                android:text="14:00~15:00"
                android:textColor="#7E8081" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="15"
                android:text="15:00~16:00" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="16"
                android:text="16:00~17:00" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="17"
                android:text="17:00~18:00" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="18"
                android:text="18:00~19:00" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="19"
                android:text="19:00~20:00" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="20"
                android:text="20:00~21:00" />

            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:onClick="btnTimeClick"
                android:tag="21"
                android:text="21:00~22:00" />

        </LinearLayout>
    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btncomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="#FFFFFF"
                android:onClick="reservationdialog"
                android:text="선택완료"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnreset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4EBEF1"
                android:onClick="btnTimeClick"
                android:text="초기화"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>


</LinearLayout>

